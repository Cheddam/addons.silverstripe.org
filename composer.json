{
  "name": "extensions.silverstripe.org",
  "description": "The SilverStripe extensions listing site",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/silverstripe/silverstripe-globaltoolbar.git"
    }
  ],
  "require": {
    "composer/installers": "*",
    "composer/composer": "*",
    "dflydev/markdown": "1.0.*@stable",
    "ezyang/htmlpurifier": "4.5.*@stable",
    "guzzle/guzzle": "3.2.0",
    "silverstripe/framework": "^4",
    "silverstripe/multivaluefield": "*",
    "silverstripe/toolbar": "dev-feature/ss4-upgrade as 4.0.12",
    "knplabs/packagist-api": "1.*@stable",
    "stojg/silverstripe-resque": "*",
    "silverstripe-australia/elastica": "dev-master",
    "symfony/event-dispatcher": "^2.8",
    "symfony/filesystem": "^2.8",
    "symfony/process": "^2.8",
    "symfony/finder": "^2.8",
    "symfony/console": "^2.8",
    "symfony/yaml": "^2.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "silverstripe/sqlite3": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "SilverStripe\\Addons\\": "mysite/src/"
    }
  },  
  "minimum-stability": "dev",
  "prefer-stable": true
}
